@model IEnumerable<BookNGo.Models.House>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <input type="text" name="title" placeholder="Enter House Title" />
        <input type="text" name="occupancy" placeholder="Enter Occupancy" />
        @Html.DropDownList("Location", (SelectList)ViewBag.Location, "Please select", htmlAttributes: new { @class = "form-control" })
        @Html.DropDownList("Category", (SelectList)ViewBag.Category, "Please select", htmlAttributes: new { @class = "form-control" })
        @Html.TextBox("Start Date", "", new { @class = "form-control", type = "date" })
        @Html.TextBox("End Date", "", new { @class = "form-control", type = "date" })
        <input type="submit" name="submit" value="Search" class="btn btn-default" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxOccupancy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerNight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxOccupancy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PricePerNight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.LocationName)
        </td>
        <td>
            @Html.ActionLink("Book It", "BookIt", "Reservations", new { houseId = item.HouseId }, null);
            @Html.ActionLink("Details", "Details", new { id = item.HouseId })
        </td>
    </tr>
    }

</table>
